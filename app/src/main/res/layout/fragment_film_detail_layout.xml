<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="6">

        <LinearLayout
            android:id="@+id/headImageLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backdropDetailIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/headContentLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            android:background="@color/myColorPrimary"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/posterDetailIV"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/titleDetailTV"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/posterDetailIV"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/releaseDateDetailTV"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_below="@+id/titleDetailTV"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/titleDetailTV"
                android:layout_alignStart="@+id/titleDetailTV"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/contentLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/overviewTitleTV"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="PÅ™ehled"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/overviewContentTV"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_below="@+id/overviewTitleTV"/>
        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plusFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/myColorAccent"
        app:layout_anchor="@id/headImageLL"
        app:layout_anchorGravity="bottom|right|end"
        android:visibility="invisible"/>

</android.support.design.widget.CoordinatorLayout>



