<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="6">

        <LinearLayout
            android:id="@+id/headImageLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backdropDetailIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/headContentLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            android:background="@color/myColorPrimary">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4">
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/titleDetailTV"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/directorTV"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/releaseDateDetailTV"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:gravity="end"
                        android:paddingRight="15dp"
                        android:paddingEnd="15dp"
                        android:layout_above="@+id/directorTV"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <RelativeLayout
                android:id="@+id/contentLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/castTitleTV"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:text="Obsazení"
                android:layout_marginBottom="2dp"
                android:visibility="invisible"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cast1RL"
                    android:layout_below="@+id/castTitleTV"
                    android:layout_margin="6dp">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                                  android:id="@+id/cast1ProfileIV"
                                                                  android:layout_width="40dp"
                                                                  android:layout_height="40dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cast1NameTV"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@+id/cast1ProfileIV"
                        android:layout_toEndOf="@+id/cast1ProfileIV"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cast2RL"
                    android:layout_below="@+id/cast1RL"
                    android:layout_margin="6dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/cast2ProfileIV"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cast2NameTV"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/cast2ProfileIV"
                        android:layout_toEndOf="@+id/cast2ProfileIV"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"/>
                </RelativeLayout>

                <View
                    android:id="@+id/separator"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#666666"
                    android:layout_below="@id/cast2RL"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/overviewTitleTV"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:text="Přehled"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/separator"
                    android:visibility="invisible"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/overviewContentTV"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_below="@+id/overviewTitleTV"/>

        </RelativeLayout>

        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/posterDetailIV"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_anchor="@id/headContentLL"
        app:layout_anchorGravity="left|center|start"
        android:layout_height="140dp"
        android:layout_width="wrap_content"
        android:paddingBottom="20dp"
        android:scaleType="fitStart"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plusFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/myColorAccent"
        app:layout_anchor="@id/headImageLL"
        app:layout_anchorGravity="bottom|right|end"
        android:visibility="invisible"
        />

</android.support.design.widget.CoordinatorLayout>



